{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "module": "NodeNext",
    "target": "ES2021",
    "outDir": "out",
    "strictNullChecks": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
    ".eslintrc.cjs",
    "tsup.config.ts"
  ]
}